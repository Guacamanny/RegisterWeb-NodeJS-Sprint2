<html>

<head>
	<title>Register - Employee</title>
	<meta name="viewport" content="width=device-width, initial-scale=1"> 

	<link rel="stylesheet" type="text/css" href="/styles/master.css">

	<script type="text/javascript" src="/libs/jquery-3.3.1.js" defer></script>
	<script type="text/javascript" src="/scripts/master.js" defer></script>
	<script type="text/javascript" src="/scripts/employeeDetail.js" defer></script>
</head>

<body>

	<div class="header">
		<h1 class="primary-message">Employee Detail</h1>
	</div>
		
	<div id="main" class="main">
		<div id="error" <% if (!locals.errorMessage || (locals.errorMessage === "")) { %> class="hidden" <% } %>>
			<h4 id="errorMessage" class="error-message">
				<% if (locals.errorMessage && (locals.errorMessage !== "")) { %>
					<%= locals.errorMessage %>
				<% } %>
			</h4>
		</div>

		<div class="inputContent">
			<table id="employeeDetails">
				<tbody>
					<tr class="hidden">
						<td>ID:</td>
						<td>
							<input type="hidden" name="employeeId" value="<% if (locals.employee && locals.employee.id) { %><%= locals.employee.id %><% } %>" />
						</td>
					</tr>
					<tr class="hidden">
						<td>Manager ID:</td>
						<td>
							<input type="hidden" name="employeeManagerId" value="<% if (locals.employee && locals.employee.managerId) { %><%= locals.employee.managerId %><% } %>" />
						</td>
					</tr>
					<tr <% if (!locals.employee || !locals.employee.id || (locals.employee.id.trim() === "")) { %>class="hidden"<% } %>>
						<td class="label">Employee ID:</td>
						<td>
							<input type="text" name="employeeEmployeeId" value="<% if (locals.employee && locals.employee.employeeId) { %><%= locals.employee.employeeId %><% } %>" class="update" disabled />
						</td>
					</tr>
					<tr>
						<td class="label">First Name:</td>
						<td>
							<input type="text" name="employeeFirstName" value="<% if (locals.employee && locals.employee.firstName) { %><%= locals.employee.firstName %><% } %>" class="update" />
						</td>
					</tr>
					<tr>
						<td class="label">Last Name:</td>
						<td>
							<input type="text" name="employeeLastName" value="<% if (locals.employee && locals.employee.lastName) { %><%= locals.employee.lastName %><% } %>" class="update" />
						</td>
					</tr>
					<tr>
						<td class="label">Password:</td>
						<td>
							<input type="password" name="employeePassword" value="" class="update" />
						</td>
					</tr>
					<tr>
						<td class="label">Verify Password:</td>
						<td>
							<input type="password" name="employeeVerifyPassword" value="" class="update" />
						</td>
					</tr>
					<tr>
						<td class="label">Employee Type:</td>
						<td>
							<select name="employeeType" class="select">
								<% locals.employeeTypes.forEach((employeeType) => { %>
									<option value="<%= employeeType.value %>"><%= employeeType.label %></option>
								<% }); %>
							</select>
						</td>
					</tr>
				</tbody>
			</table>
		</div>

		<div class="employeeActionsWrapper">
			<br />
			<button id="saveButton" type="button" class="action">Save</button>
		</div>
	</div>

	<div class="footer">
		<img id="signOutImage" src="/images/Sign-Out.png" alt="Sign Out" class="footer" />
	</div>

</body>

</html>